                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <TextField fx:id="textField_mazeRows" text="10" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <TextField fx:id="textField_mazeColumns" text="10" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <Button fx:id="btn_newGame" onAction="#generateMaze" prefHeight="25.0" prefWidth="167.0" text="New Game" GridPane.columnSpan="2" GridPane.rowIndex="6" />
                    <Button fx:id="btn_showSolution" cancelButton="true" disable="true" onAction="#showHideSolution" prefHeight="25.0" prefWidth="167.0" text="Show/ Hide Solution" GridPane.columnSpan="2" GridPane.rowIndex="8" />
               <Button fx:id="btn_giveHint" disable="true" mnemonicParsing="false" onAction="#giveAHint" prefHeight="25.0" prefWidth="167.0" text="Give Me A Hint" GridPane.columnSpan="2" GridPane.rowIndex="7" />
               <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.rowSpan="3">
                  <image>
                     <Image url="@../resources/Images/Mario.jpg" />
                  </image>
               </ImageView>
               <Button fx:id="btn_exitGame" mnemonicParsing="false" onAction="#exitGameAlert" prefHeight="23.0" prefWidth="117.0" text="Exit Game" GridPane.columnSpan="2" GridPane.rowIndex="9" />
