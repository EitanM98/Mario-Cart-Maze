<AnchorPane prefHeight="333.0" prefWidth="268.0" stylesheets="@MainStyle.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.WinnerStageController">
   <children>
      <ImageView fitHeight="302.0" fitWidth="280.0" layoutX="1.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../Resources/Images/winner_img.jpg" />
         </image></ImageView>
      <GridPane layoutX="1.0" layoutY="299.0" prefHeight="34.0" prefWidth="281.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#closeWindow" prefHeight="37.0" prefWidth="94.0" text="Back" />
            <Button fx:id="btnSaveMaze" mnemonicParsing="false" onAction="#saveMaze" prefHeight="47.0" prefWidth="94.0" text="Save Maze" GridPane.columnIndex="1" />
            <Button fx:id="btnNewGame" mnemonicParsing="false" onAction="#newMaze" prefHeight="36.0" prefWidth="102.0" text="New Game" GridPane.columnIndex="2" />
         </children>
      </GridPane>
