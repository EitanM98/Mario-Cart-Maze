<?import View.*?>

<BorderPane fx:id="ViewPane" maxHeight="1.7976931348623157E308" onDragDetected="#dragDetected" onMouseClicked="#mouseClicked" prefHeight="497.0" prefWidth="693.0" stylesheets="@MainStyle.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
    <left>
        <VBox prefHeight="163.0" prefWidth="178.0" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <GridPane>
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <Button fx:id="btn_newGame" onAction="#generateMaze" prefHeight="25.0" prefWidth="167.0" text="New Game" GridPane.columnSpan="3" GridPane.rowIndex="5" />
                    <Button fx:id="btn_showSolution" cancelButton="true" disable="true" onAction="#showHideSolution" prefHeight="25.0" prefWidth="131.0" text="Show/ Hide Solution" GridPane.columnSpan="3" GridPane.rowIndex="7" />
               <Button fx:id="btn_giveHint" disable="true" mnemonicParsing="false" onAction="#giveAHint" prefHeight="25.0" prefWidth="130.0" text="Give Me A Hint" GridPane.columnSpan="3" GridPane.rowIndex="6" />
               <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.rowSpan="3">
                  <image>
                     <Image url="@../../../Resources/Images/Mario.jpg" />
                  </image></ImageView>
               <Button fx:id="btn_exitGame" mnemonicParsing="false" onAction="#exitGameAlert" prefHeight="23.0" prefWidth="132.0" text="Exit Game" GridPane.columnSpan="3" GridPane.rowIndex="8" />
                </GridPane>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </left>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                        <MenuItem fx:id="menu_NewMaze" mnemonicParsing="false" onAction="#generateMaze" text="New Maze" />
                                <MenuItem fx:id="menu_LoadMaze" mnemonicParsing="false" onAction="#loadMaze" text="Load Maze" />
                        <MenuItem fx:id="menu_SaveMaze" mnemonicParsing="false" onAction="#saveMaze" text="Save Maze" />
                            </items>
                        </Menu>
                  <Menu mnemonicParsing="false" text="Settings">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#openPreferences" text="Preferences" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openHelp" text="How to play" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="About">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#openAbout" text="About us" />
                        <MenuItem mnemonicParsing="false" onAction="#openMarioKartLink" text="Mario Kart" />
                    </items>
                  </Menu>
                    </menus>
                </MenuBar>
            </children>
        </VBox>
    </top>
   <center>
      <BorderPane fx:id="mazeDisplayerBoarderPane" onMouseClicked="#mouseClicked" prefHeight="485.0" prefWidth="515.0" BorderPane.alignment="CENTER">
         <bottom>
            <Label fx:id="lbl_Invalid_move" alignment="CENTER" prefHeight="17.0" prefWidth="499.0" text="***Invalid move, you can't move through walls*** " textAlignment="CENTER" textFill="RED" visible="false" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold Italic" size="16.0" />
               </font>
            </Label>
         </bottom>
         <center>
            <ScrollPane fx:id="mazeDisplayerScrollPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <content>
                <AnchorPane >
                     <children>
                          <Pane fx:id="mazeDisplayerPane" onScroll="#zoomMaze">
                              <children>
                                  <MazeDisplayer fx:id="mazeDisplayer" imageFileNameGoal="Resources/Images/goal-position.jpg" imageFileNamePlayer="Resources/Images/Mario.png" imageFileNameStart="Resources/Images/Start-position.jpg" imageFileNameWall="./Resources/Images/WaterWall.jpg" onKeyPressed="#keyPressed" />
                              </children>
                              <padding>
                                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                              </padding>
                          </Pane>
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
         </center>
      </BorderPane>
   </center>
</BorderPane>
